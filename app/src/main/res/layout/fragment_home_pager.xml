<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="io.jkn.deeep.fragments.HomePagerFragment"
    android:orientation="vertical">


    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/pagerTab"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/pinkColor"
        android:textColor="@android:color/white"
        app:pstsShouldExpand="true"
        app:pstsTabBackground="@drawable/background_pager_tab"

        app:pstsUnderlineHeight="0dp"
        app:pstsIndicatorHeight="2dp"
        app:pstsUnderlineColor="@android:color/white"
        app:pstsIndicatorColor="#8aba56"

        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>
