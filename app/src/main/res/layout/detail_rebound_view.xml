<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="32dp"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/bottom_line_bg">
    >
    

    <ImageView
        android:id="@+id/imageViewPlaceholder"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/detail_rebound_placeholder"/>
    <LinearLayout
        android:id="@+id/layoutReboundBody"
        android:visibility="invisible"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewRebound"
            android:layout_width="88dp"
            android:layout_height="66dp"
            android:background="#f0f0f0"/>
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReboundOf"
                android:textColor="#BBBBBB"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REBOUND OF"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/darkBackgroundColor"
                android:id="@+id/tvReboundTitle"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some Rebounded shot title"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by "/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/linkColor"
                    android:id="@+id/tvReboundUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by Some Body"/>
                </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    
</RelativeLayout>