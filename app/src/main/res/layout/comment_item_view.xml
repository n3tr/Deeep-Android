<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@android:color/white"
    android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/detail_avatar_placeholder"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:textStyle="bold"
                android:text="Username"
                android:textColor="@color/darkBackgroundColor"
                android:id="@+id/tvCommentUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <TextView
                android:id="@+id/tvCommentDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="about 1 day"
                android:textColor="#909090"/>

            <TextView
                android:text="Comment body goes here"
                android:textColor="#606060"
                android:id="@+id/tvCommentBody"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="36dp"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        ></View>


    

    

</LinearLayout>